<Window xmlns="https://github.com/avaloniaui"
        xmlns:controls="using:ProductionAccounting_AvaloniaApplication.Views.Control"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        Width="1200" Height="700"
        MinWidth="800" MinHeight="500"
        Background="Gray"
        x:Class="ProductionAccounting_AvaloniaApplication.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="False"
        Icon="/Assets/icon/avalonia-logo.ico"
        Title="ProductionAccounting_AvaloniaApplication">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="150, *">
        
        <Grid Grid.Column="0"
              ZIndex="1">
            <controls:RightBoardUserControl DataContext="{Binding RightBoardUserControlViewModel}" />
        </Grid>
        
        <Grid Grid.Column="1">
            <Grid Name="ContentCenter" ZIndex="1"/>
            <ContentControl Content="{Binding CurrentPage}"/>
        </Grid>
    </Grid>
</Window>
