<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
			 x:DataType="vm:InfoItemUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProductionAccounting_AvaloniaApplication.InfoItemUserControl">

    <StackPanel Orientation="Horizontal" Spacing="10">
        <TextBlock Text="{Binding Label}" FontWeight="SemiBold" 
                   Foreground="#2C3E50" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Value}" FontSize="{Binding ValueSize}"
                   Foreground="{Binding ValueColor}" 
                   FontWeight="{Binding ValueWeight}"
                   VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
