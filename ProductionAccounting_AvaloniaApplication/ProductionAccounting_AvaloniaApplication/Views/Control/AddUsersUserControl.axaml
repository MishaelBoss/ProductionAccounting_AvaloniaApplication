<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
             x:DataType="vm:AddUsersUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Control.AddUsersUserControl">
    
    <UserControl.Styles>
        <StyleInclude Source="/Styles/Controls/FormStyles.axaml"/>
    </UserControl.Styles>

    <Grid>
		<Border Background="#000000" Opacity="0.4" />

        <Border VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="500"
                MaxHeight="700"
                Background="Gray"
                CornerRadius="16"
                Padding="24"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                BoxShadow="0 4 12 #00000020">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16">
                    <TextBlock Text="➕ Добавить нового пользователя"
                               FontSize="24"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               Foreground="#1A1A1A" />

                    <TextBlock Text="{Binding Messageerror}"
                               Foreground="Red"
                               HorizontalAlignment="Center"
                               FontSize="14"/>

                    <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="12" ColumnSpacing="12">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Login:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="1" Watermark="Enter login" Text="{Binding Login}" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="First name:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" Grid.Column="1" Watermark="Enter first name" Text="{Binding FirstUsername}" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Last name:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="2" Grid.Column="1" Watermark="Enter last name" Text="{Binding LastUsername}" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Middle name:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="3" Grid.Column="1" Watermark="Enter middle name" Text="{Binding MiddleName}" />

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Base salary:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="4" Grid.Column="1" Watermark="e.g. 50000" Text="{Binding BaseSalary}"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Email:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="5" Grid.Column="1" Watermark="user@example.com" Text="{Binding Email}" />

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Phone:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="6" Grid.Column="1" Watermark="+7 (999) 123-45-67" Text="{Binding Phone}" />
                    </Grid>

                    <StackPanel Spacing="12">
                        <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="12">
                            <TextBlock Grid.Column="0" Text="Rank:" VerticalAlignment="Center" />
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding ComboBoxItems}"
                                      SelectedItem="{Binding SelectedComboBoxItem}"
                                      MinHeight="32"
                                      Padding="8,0"
                                      Classes="StyledComboBox" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="12">
                            <TextBlock Grid.Column="0" Text="Department:" VerticalAlignment="Center" />
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding ComboBoxItemsDepartments}"
                                      SelectedItem="{Binding SelectedComboBoxItemDepartment}"
                                      MinHeight="32"
                                      Padding="8,0"
                                      Classes="StyledComboBox" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="12">
                            <TextBlock Grid.Column="0" Text="Position:" VerticalAlignment="Center" />
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding ComboBoxItemsPositions}"
                                      SelectedItem="{Binding SelectedComboBoxItemPosition}"
                                      MinHeight="32"
                                      Padding="8,0"
                                      Classes="StyledComboBox" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" 
                                Spacing="12" 
                                HorizontalAlignment="Center">
                        <Button Content="Добавить"
                                Command="{Binding ConfirmCommand}"
                                IsEnabled="{Binding IsActiveConfirmButton}"
                                Width="140"
                                Height="36"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Classes="AccentButton" />

                        <Button Content="Cancel"
                                Command="{Binding CancelCommand}"
                                Width="100"
                                Height="36"
                                Background="Transparent"
                                BorderBrush="#CCCCCC"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Foreground="#666666" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
    
</UserControl>
