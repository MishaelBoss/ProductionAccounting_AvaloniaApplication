<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
			 x:DataType="vm:AddSubProductUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Control.AddSubProductUserControl">

    <Grid>
        <Border Background="#000000" 
				Opacity="0.5"/>
        
        <Border VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Width="400" 
                Height="300"
                Background="Gray" 
                CornerRadius="12">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" 
								Spacing="10">

                        <TextBox Text="{Binding Title}" 
                                 Watermark="Название подмарки (например: Крыша, Стена ×4, Фундамент)"/>

                        <TextBox Text="{Binding PlannedQuantity}" 
                                 Watermark="План (шт, т, м² — можно дробное: 4.5)"/>

                        <TextBox Text="{Binding Notes}" 
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="80"
                                 Watermark="Примечание (необязательно)"/>

                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Spacing="10"
                                    Margin="0,20,0,0">

                            <Button Classes="ButtonLogin"
                                    IsEnabled="{Binding CanSaveCurrentSubProduct}"
                                    Command="{Binding SaveCurrentSubProductCommand}"
                                    Content="Сохранить подмарку"/>

                            <Button Command="{Binding CancelCommand}"
                                    Content="Отмена"
                                    HorizontalAlignment="Center"
                                    Background="Transparent"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>

</UserControl>
