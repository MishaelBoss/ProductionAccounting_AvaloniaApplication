<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
			 x:DataType="vm:TaskDetailUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="650"
             x:Class="ProductionAccounting_AvaloniaApplication.TaskDetailUserControl">

    <Grid Background="#1E1E1E" 
          RowDefinitions="Auto,460, *">
    
        <TextBlock Text="Добавить подмарку"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#00D4FF"
                   HorizontalAlignment="Center"
                   Margin="20"/>

        <Border Grid.Row="1"
                Background="#252526"
                CornerRadius="16"
                Padding="40"
                Margin="40"
                Width="600"
                MaxWidth="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel Spacing="20">

                <TextBox Text="{Binding Title}"
                         Watermark="Название подмарки (например: Крыша, Стена ×4, Фундамент)"
                         FontSize="16"/>

                <TextBox Text="{Binding PlannedQuantity}"
                         Watermark="План (шт, т, м² — можно дробное: 4.5)"
                         FontSize="16"/>

                <TextBox Text="{Binding Notes}"
                         Watermark="Примечание (необязательно)"
                         Height="100"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         FontSize="14"/>

                <Button Content="Сохранить подмарку"
                        Command="{Binding SaveCurrentSubProductCommand}"
                        Background="#28A745"
                        Foreground="White"
                        FontSize="18"
                        Height="50"
                        HorizontalAlignment="Stretch"
                        CornerRadius="12"
                        IsEnabled="{Binding CanSaveCurrentSubProduct}"/>
            </StackPanel>
        </Border>

        <Grid   Grid.Row="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ColumnDefinitions="*, Auto">
             <Grid Grid.Column="0"
                   Margin="0,10,5,10"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch">
                 <Border Background="White"
                         Opacity="0.5"
                         CornerRadius="5"/>
                 <ScrollViewer Margin="10">
                     <StackPanel Name="HomeMainContent"
                                 Orientation="Vertical"/>
                 </ScrollViewer>
             </Grid>
        </Grid>
    </Grid>

</UserControl>
