<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
             x:DataType="vm:AddOrderUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Control.AddOrderUserControl">

    <UserControl.Styles>
        <StyleInclude Source="/Styles/Controls/FormStyles.axaml"/>
    </UserControl.Styles>

    <Grid>
        <Border Background="#000000" Opacity="0.4" />

        <Border VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="500"
                MaxHeight="700"
                Background="Gray"
                CornerRadius="16"
                Padding="24"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                BoxShadow="0 4 12 #00000020">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16">
                    <TextBlock Text="➕ Добавить новый заказ"
                               FontSize="24"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               Foreground="#1A1A1A" />

                    <TextBlock Text="{Binding Messageerror}"
                               Foreground="Red"
                               HorizontalAlignment="Center"
                               FontSize="14"/>

                    <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="12" ColumnSpacing="12">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Имя продукта:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="1" Watermark="Введите имя продукта" Text="{Binding Name}" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Контрагенты:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" Grid.Column="1" Watermark="Введите контрагента" Text="{Binding Counterparties}" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Описание:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="2" Grid.Column="1" Watermark="Введите описание" Text="{Binding Description}" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Вес:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="3" Grid.Column="1" Watermark="Введите общий вес" Text="{Binding TotalWeight}" />

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Коэффициент:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="4" Grid.Column="1" Watermark="Введите коэффициент" Text="{Binding Coefficient}" />
                    </Grid>

                    <StackPanel Spacing="12">
                        <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="12">
                            <TextBlock Grid.Column="0" Text="Мастер:" VerticalAlignment="Center" />
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Users}"
                                      SelectedItem="{Binding SelectedUser}"
                                      DisplayMemberBinding="{Binding FullName}"
                                      MinHeight="32"
                                      Padding="8,0"
                                      Classes="StyledComboBox" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" 
                                Spacing="12" 
                                HorizontalAlignment="Center">
                        <Button Content="Добавить"
                                Command="{Binding ConfirmCommand}"
                                IsEnabled="{Binding IsActiveConfirmButton}"
                                Width="140"
                                Height="36"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Classes="AccentButton" />

                        <Button Content="Cancel"
                                Command="{Binding CancelCommand}"
                                Width="100"
                                Height="36"
                                Background="Transparent"
                                BorderBrush="#CCCCCC"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Foreground="#666666" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
	</Grid>

</UserControl>
