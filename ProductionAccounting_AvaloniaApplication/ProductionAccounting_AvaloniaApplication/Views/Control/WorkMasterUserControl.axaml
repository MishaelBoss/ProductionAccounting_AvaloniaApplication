<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
             x:DataType="vm:WorkMasterUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="850"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Control.WorkMasterUserControl">

    <Grid ColumnDefinitions="*, Auto">
        <Border Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="8" 
                Opacity="0.5"/>

        <Border Padding="20">
            <StackPanel Spacing="15">
                <TextBlock Text="Работы" 
                           FontSize="16"
                           FontWeight="SemiBold" 
                           Foreground="#2C3E50"/>
                
                <ScrollViewer>
                    <StackPanel Name="CartTasks"/>
                </ScrollViewer>
            </StackPanel>
        </Border>
        
        <Grid   Grid.Column="1"
                IsVisible="True"
                Name="ProductContent"
                Margin="5,10,0,10"
                Width="400"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
    </Grid>

</UserControl>
