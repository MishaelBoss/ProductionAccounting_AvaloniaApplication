<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
             x:DataType="vm:TabOrderUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Control.TabOrderUserControl">

    <Grid>
		<Grid Margin="10" 
              RowDefinitions="Auto, Auto, *">

             <Grid Grid.Row="0" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   ColumnDefinitions="Auto, Auto">

                 <TextBox Width="200"
                          Watermark="Поиск"
                          Classes="Search"
                          HorizontalAlignment="Center"
                          Text="{Binding Search}"/>

            <StackPanel Grid.Column="1"
		  				Orientation="Horizontal"
		  				HorizontalAlignment="Center"
		  				Margin="10,0,0,0">

		  		<Button Margin="10,0,0,0"
		  				Width="32"
		  				Height="32"
		  				Command="{Binding DownloadAsyncCommand}"
		  				ToolTip.Tip="������� ������">
		  			<Image Source="/Assets/download-cloud-64.png"/>
		  		</Button>

		  		<Button Margin="10,0,0,0"
                  Width="32"
                  Height="32"
                  Command="{Binding RefreshAsyncCommand}"
                  ToolTip.Tip="�������� ������">
		  			<Image Source="/Assets/return-64.png"/>
		  		</Button>
            </StackPanel>
            </Grid>
             <StackPanel Grid.Row="1" 
                         Orientation="Horizontal" 
                         Spacing="15" 
                         Margin="0,10,0,10" 
                         HorizontalAlignment="Center">

                 <StackPanel Orientation="Horizontal" 
                             Spacing="10">
                     <CheckBox Content="Активные" 
                               IsChecked="{Binding ShowActive}"/>
                     <CheckBox Content="Неактивные" 
                               IsChecked="{Binding ShowInactive}"/>
                 </StackPanel>

                 <Button Content="Сбросить" 
                         Command="{Binding ResetFiltersCommand}" 
                         Height="27" 
                         Width="90"/>
             </StackPanel>

             <Grid Grid.Row="2"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   ColumnDefinitions="*, Auto">

                 <Grid Grid.Column="0"
                       Margin="0,10,5,10"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch">
                     <Border Background="White"
                             Opacity="0.5"
                             CornerRadius="5"/>
                     <ScrollViewer Margin="10">
                         <StackPanel Name="HomeMainContent"
                                     Orientation="Vertical"/>
                     </ScrollViewer>
                 </Grid>
             </Grid>
        </Grid>
    </Grid>

</UserControl>
