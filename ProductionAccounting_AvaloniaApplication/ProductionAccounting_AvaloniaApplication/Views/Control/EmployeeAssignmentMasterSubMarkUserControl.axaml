<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
             x:DataType="vm:EmployeeAssignmentMasterSubMarkUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProductionAccounting_AvaloniaApplication.EmployeeAssignmentMasterSubMarkUserControl">

    <Grid Margin="50" RowDefinitions="Auto,*">
        <TextBlock Text="Назначить работу сотруднику"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#00D4FF"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>

        <Border Grid.Row="1"
                Background="#252526"
                CornerRadius="20"
                Padding="60"
                MaxWidth="800"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">

            <StackPanel Spacing="30">

                <ComboBox ItemsSource="{Binding Employees}"
                          SelectedItem="{Binding SelectedEmployee}"
                          DisplayMemberBinding="{Binding FullName}"
                          PlaceholderText="Кому поручить"
                          FontSize="22"
                          Height="70"/>

                <TextBox Text="{Binding Quantity}"
                         Watermark="Сколько штук назначить"
                         FontSize="22"
                         Padding="20"
                         Height="70"/>

                <Button Content="НАЗНАЧИТЬ РАБОТУ"
                        Command="{Binding AssignCommand}"
                        Background="#28A745"
                        Foreground="White"
                        FontSize="28"
                        FontWeight="Bold"
                        Height="100"
                        CornerRadius="20"
                        HorizontalAlignment="Stretch"
                        IsEnabled="{Binding CanAssign}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
