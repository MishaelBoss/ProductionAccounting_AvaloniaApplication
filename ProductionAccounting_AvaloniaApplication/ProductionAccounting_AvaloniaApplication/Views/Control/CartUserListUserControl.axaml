<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
             x:DataType="vm:CartUserListUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="80"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Control.CartUserListUserControl">

	<UserControl.Styles>
        <StyleInclude Source="/Styles/Controls/CartUserListStyles.axaml"/>
    </UserControl.Styles>

    <Border CornerRadius="12"
            Background="LightGray"
            BorderBrush="#E1E5E9"
            BorderThickness="1"
            Margin="5">

		<Grid Margin="15"
			  ColumnDefinitions="Auto, *, Auto, Auto">

			<Border Grid.Column="0"
                    Width="45"
                    Height="45"
                    CornerRadius="22"
                    Background="#4A90E2"
                    Margin="0,0,15,0"
                    VerticalAlignment="Center">

				<TextBlock Text="{Binding Login}"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
			</Border>

			<StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="0,0,15,0">
				<TextBlock Text="{Binding Login}"
                           Foreground="#2C3E50"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,2"/>

				<TextBlock Text="{Binding FirstName}"
                           Foreground="#7F8C8D"
                           FontSize="12"
                           Margin="0,0,0,1"/>

				<TextBlock Text="{Binding LastName}"
                           Foreground="#7F8C8D"
                           FontSize="11"
                           TextTrimming="CharacterEllipsis"/>

				<TextBlock Text="{Binding DateJoined}"
                           Foreground="#7F8C8D"
                           FontSize="11"
                           TextTrimming="CharacterEllipsis"/>
			</StackPanel>

			<Border Classes="BorderPassword"
					Grid.Column="1"
					IsVisible="{Binding IsAdministrator}">
				<Grid ColumnDefinitions="*, Auto">
					<TextBlock	Text="{Binding Password}" 
								VerticalAlignment="Center"/>

					<Button Grid.Column="1"
							Command="{Binding CopyPasswordCommand}"
							Classes="Button"
							Background="#4A90E2"
							ToolTip.Tip="�������� �������">
					<Image Source="/Assets/copy-64.png"/>
				</Button>
				</Grid>
			</Border>

			<StackPanel Grid.Column="3"
						Orientation="Horizontal"
						Spacing="6"
						VerticalAlignment="Center">

				<ToggleButton	Classes="ToggleButton" 
								IsChecked="{Binding IsActive}"
								IsVisible="{Binding IsAdministrator}">
					<Panel>
						<Image Classes="toggle-on" Source="/Assets/toggle-on-64.png"/>
						<Image Classes="toggle-off" Source="/Assets/toggle-off-64.png"/>
					</Panel>
				 </ToggleButton>

				<Button Click="OpenProfileUser_Click"
						Classes="Button"
						Background="#4A90E2"
						IsVisible="{Binding IsAdministrator}"
						ToolTip.Tip="�������� �������">
					<Image Source="/Assets/find-user-64.png"/>
				</Button>

				<Button Command="{Binding EditCommand}"
						Classes="Button"
						Background="#34C759"
						IsVisible="{Binding IsAdministrator}"
						ToolTip.Tip="������������� ������������">
					<Image Source="/Assets/edit-user-64.png"/>
				</Button>

				<Button Click="OpenWindowsConfirmDeleteUser_Click"
						Classes="Button"
						Background="#FF3B30"
						IsVisible="{Binding IsAdministrator}"
						ToolTip.Tip="������� ������������">
					<Image Source="/Assets/remove-64.png"/>
				</Button>
			</StackPanel>
		</Grid>
	</Border>
</UserControl>
