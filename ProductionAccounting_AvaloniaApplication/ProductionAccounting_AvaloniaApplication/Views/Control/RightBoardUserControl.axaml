<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
             x:DataType="vm:RightBoardUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Control.RightBoardUserControl">

    <UserControl.Styles>
        <StyleInclude Source="/Styles/Resources/RightBoardStyles.axaml"/>
    </UserControl.Styles>

    <Design.DataContext>
		<vm:RightBoardUserControlViewModel/>
	</Design.DataContext>

    <Grid>
        <Border Background="#2D2D2D" 
                Opacity="0.8"/>
        <Grid RowDefinitions="40,*,50,40">
            <Grid Grid.Row="1">
                <StackPanel Orientation="Vertical" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Center" 
                            Spacing="5">
					
                    <Button Classes="Button" 
                            Command="{Binding OpenAdminPanelPageCommand}">
                        <Grid ColumnDefinitions="24,*" 
                              Classes="GridButtonButton">
                            <Image Source="/Assets/administrator-64.png" 
                                   Width="21" 
                                   Height="21" 
                                   Stretch="Uniform"/>
                            <Label Grid.Column="1" Classes="LabelButtonButton" Content="Админ панель"/>
                        </Grid>
                    </Button>

                    <Button Classes="Button"
                            Command="{Binding OpenProductLibraryPageCommand}">
						<Grid ColumnDefinitions="24,*"
                              Classes="GridButtonButton">
							<Image Source="/Assets/library-64.png"
                                   Width="21"
                                   Height="21"
                                   Stretch="Uniform"/>
							<Label Grid.Column="1" Classes="LabelButtonButton" Content="Список продукции"/>
						</Grid>
					</Button>
                    
                    <Button Classes="Button"
							Command="{Binding OpenUserLibraryPageCommand}">
                        <Grid ColumnDefinitions="24,*" 
                              Classes="GridButtonButton">
                            <Image Source="/Assets/library-64.png" 
                                   Width="21" 
                                   Height="21" 
                                   Stretch="Uniform"/>
                            <Label Grid.Column="1" Classes="LabelButtonButton" Content="Список пользователей"/>
                        </Grid>
                    </Button>
                    
                    <Button Classes="Button"
                            Command="{Binding OpenWorkUserPageCommand}">
                        <Grid ColumnDefinitions="24,*" 
                              Classes="GridButtonButton">
                            <Image Source="/Assets/home-64.png" 
                                   Width="21" 
                                   Height="21" 
                                   Stretch="Uniform"/>
                            <Label Grid.Column="1" Content="Рабочая область пользователя"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel Orientation="Vertical" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Center" 
                            Spacing="5">
                    <Separator Background="Gray" VerticalAlignment="Top"/>
                    
                    <!--<Button Classes="Setting"
                            Command="{Binding OpenSettingsPageCommand}">
                        <Grid ColumnDefinitions="24,*" 
                              Classes="GridButtonSetting">
                            <Image Source="/Assets/settings-64.png" 
                                   Width="21" 
                                   Height="21" 
                                   Stretch="Uniform"/>
                            <Label Grid.Column="1" Content="{Binding SettingsText}"/>
                        </Grid>
                    </Button>-->
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
