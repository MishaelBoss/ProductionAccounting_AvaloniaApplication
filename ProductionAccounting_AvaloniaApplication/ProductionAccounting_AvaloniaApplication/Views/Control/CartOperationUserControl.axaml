<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
			 x:DataType="vm:CartOperationUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="80"
             x:Class="ProductionAccounting_AvaloniaApplication.CartOperationUserControl">

    <Border CornerRadius="12"
            Background="LightGray"
            BorderBrush="#E1E5E9"
            BorderThickness="1"
            Margin="5">

		<Grid Margin="15"
			  ColumnDefinitions="Auto, *, Auto">

			<Border Grid.Column="0"
					Width="44"
					Height="44"
					CornerRadius="10"
					Background="Gray"
					Margin="0,0,16,0">
				<Image Source="/Assets/workflow-64.png"
					   Width="22"
					   Height="22"/>
			</Border>

			<StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="0,0,15,0">
				<TextBlock	Text="{Binding Name}"
							Foreground="#1A1D21"
							FontSize="16"
							FontWeight="SemiBold"
							Margin="0,0,0,4"/>

				<TextBlock	Text="{Binding OperationCode}"
							Foreground="#6B7280"
							FontSize="13"
							FontWeight="Medium"
							Margin="0,0,0,8"/>

				<StackPanel Orientation="Horizontal" 
							Spacing="16">
					<StackPanel Orientation="Horizontal" 
								Spacing="4">

						<TextBlock Text="{Binding Price, StringFormat='{}{0:N2}'}"
								   Foreground="#059669"
								   FontSize="14"
								   FontWeight="SemiBold"/>
						<TextBlock Text="₽"
								   Foreground="#059669"
								   FontSize="12"
								   FontWeight="SemiBold"
								   VerticalAlignment="Bottom"/>
					</StackPanel>
				</StackPanel>
				
			</StackPanel>

			<StackPanel Grid.Column="2"
						Orientation="Horizontal"
						Spacing="6"
						VerticalAlignment="Center">

				<Button Click="View_Click"
						Width="34"
						Height="34"
						CornerRadius="6"
						Background="#4A90E2"
						BorderThickness="0"
						ToolTip.Tip="Просмотр профиля">
					<Image Source="/Assets/search-list-64.png"
						   Width="18"
						   Height="18"/>
				</Button>

				<Button Click="Delete_Click"
						Width="34"
						Height="34"
						CornerRadius="6"
						Background="#FF3B30"
						BorderThickness="0"
						IsVisible="{Binding IsVisibleButtonDelete}"
						ToolTip.Tip="Удалить">
					<Image Source="/Assets/remove-64.png"
						   Width="18"
						   Height="18"/>
				</Button>
			</StackPanel>
		</Grid>
	</Border>

</UserControl>
