<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
             x:DataType="vm:AddWorkUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="850"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Control.AddWorkUserControl">

        <Grid Margin="10" RowDefinitions="Auto, Auto, *">
        
        <Border Grid.Row="0" Background="#f5f5f5" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <Grid ColumnDefinitions="*, *, *" RowDefinitions="Auto, Auto, Auto">
                
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="0,0,10,10">
                    <TextBlock Text="Дата" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="0,0,10,10">
                    <TextBlock Text="Смена" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox SelectedIndex="{Binding SelectedShift}">
                        <ComboBoxItem Content="Смена 1"/>
                        <ComboBoxItem Content="Смена 2"/>
                        <ComboBoxItem Content="Смена 3"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Количество" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Quantity}" Watermark="0.0"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="0,0,10,10">
                    <TextBlock Text="Продукт/Марка" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding ComboBoxProducts}" 
                              SelectedItem="{Binding SelectedProduct}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="0,0,10,10">
                    <TextBlock Text="Операция" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding ComboBoxOperations}"
                              SelectedItem="{Binding SelectedOperation}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Сумма" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CalculatedAmount, StringFormat='{}{0:C2}'}" 
                               FontSize="16" FontWeight="Bold" Foreground="Green"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Vertical" Margin="0,0,10,10">
                    <TextBlock Text="Примечание" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Description}" Watermark="Дополнительная информация"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Действия" FontWeight="Bold" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Content="Очистить" Command="{Binding ClearFormCommand}" 
                                Background="LightGray" Width="80"/>
                        <Button Content="Сохранить" Click="Confirm_Click" 
                                Background="#007ACC" Foreground="White" Width="80"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Итоги за день -->
        <Border Grid.Row="1" Background="#e8f5e8" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Заработок за день:" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding TotalEarnings, StringFormat='{}{0:C2}'}" 
                           FontSize="18" FontWeight="Bold" Foreground="DarkGreen"/>
            </StackPanel>
        </Border>
        
        <!-- Список работ за день -->
        <Border Grid.Row="2" Background="White" CornerRadius="5" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Работы за сегодня:" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding TodayWorks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f9f9f9" CornerRadius="3" Padding="10" Margin="0,0,0,5">
                                    <Grid ColumnDefinitions="*, *, Auto, Auto">
                                        <TextBlock Grid.Column="0" Text="{Binding ProductName}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding OperationName}" Margin="10,0,0,0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Quantity, StringFormat='{}{0} шт.'}" 
                                                   Margin="10,0,0,0" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="3" Text="{Binding Amount, StringFormat='{}{0:C2}'}" 
                                                   Margin="10,0,0,0" FontWeight="Bold" Foreground="Green"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
