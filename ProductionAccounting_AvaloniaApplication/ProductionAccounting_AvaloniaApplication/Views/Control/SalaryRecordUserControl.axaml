<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
             x:DataType="vm:SalaryRecordUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Control.SalaryRecordUserControl">
  
<Border BorderThickness="1"
            CornerRadius="6"
            Margin="0,0,0,10"
            Padding="15">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Основная информация -->
            <StackPanel Grid.Column="0">
                
                <!-- Заголовок с типом записи -->
                <DockPanel Margin="0,0,0,8">
                    <TextBlock Text="{Binding EmployeeName}" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ThemeForegroundBrush}"
                               DockPanel.Dock="Left"/>
                    
                    <Border CornerRadius="4"
                            Padding="6,2"
                            DockPanel.Dock="Right"
                            Margin="10,0,0,0">
                        <TextBlock Text="{Binding RecordType, FallbackValue='Запись'}"
                                   FontSize="12"
                                   FontWeight="Medium"/>
                    </Border>
                </DockPanel>
                
                <!-- Детали для обычных записей -->
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Операция -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Операция:" 
                                       FontSize="12" 
                                       Foreground="#666"/>
                            <TextBlock Text="{Binding OperationName, FallbackValue='-'}" 
                                       FontSize="14" 
                                       FontWeight="Medium"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="0,0,20,0">
                            <TextBlock Text="Дата:" 
                                       FontSize="12" 
                                       Foreground="#666"/>
                            <TextBlock Text="{Binding ProductionDate, StringFormat='dd.MM.yyyy', FallbackValue='-'}" 
                                       FontSize="14"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="0,0,20,0">
                            <TextBlock Text="Кол-во:" 
                                       FontSize="12" 
                                       Foreground="#666"/>
                            <TextBlock Text="{Binding Quantity, StringFormat='{}{0:N2}', FallbackValue='-'}" 
                                       FontSize="14"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Тоннаж:" 
                                       FontSize="12" 
                                       Foreground="#666"/>
                            <TextBlock Text="{Binding Tonnage, StringFormat='{}{0:N3} т', FallbackValue='-'}" 
                                       FontSize="14"/>
                        </StackPanel>
                    </Grid>
                    
                    <Border Background="#F8F9FA"
                            CornerRadius="4"
                            Padding="10"
                            Margin="0,10,0,0">
                        <TextBlock Text="{Binding CalculationFormula, FallbackValue='-'}"
                                   FontSize="12"
                                   Foreground="#495057"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
                
                <DockPanel Margin="0,15,0,0">
                    <TextBlock Text="Сумма:" 
                               FontSize="14" 
                               Foreground="#666"
                               DockPanel.Dock="Left"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Text="{Binding Amount, StringFormat='{}{0:N2} ₽', FallbackValue='0,00 ₽'}" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#2196F3"
                               DockPanel.Dock="Right"
                               HorizontalAlignment="Right"/>
                </DockPanel>
                
            </StackPanel>
            
            <!-- Иконка для итоговых записей -->
            <StackPanel Grid.Column="1" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <Border Width="40" 
                        Height="40" 
                        CornerRadius="20"
                        Background="#E8F5E9"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        IsVisible="{Binding IsSummary, FallbackValue=False}">
                    <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                              Foreground="#2E7D32"
                              Width="20"
                              Height="20"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
            
        </Grid>
    </Border>
</UserControl>
