<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Control"
             x:DataType="vm:SalaryRecordUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Control.SalaryRecordUserControl">
  
    <Border x:Name="MainBorder"
            Background="#FFFFFF"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="6"
            Margin="0,0,0,10"
            Padding="15">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <!-- Заголовок -->
                <DockPanel Margin="0,0,0,8">
                    <TextBlock x:Name="EmployeeNameText" 
                               Text="Иванов Иван Иванович"
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               DockPanel.Dock="Left"/>
                    
                    <!-- Бейдж для итоговых записей -->
                    <Border x:Name="SummaryBadge"
                            CornerRadius="4"
                            Padding="6,2"
                            DockPanel.Dock="Right"
                            Margin="10,0,0,0"
                            Background="#E8F5E9">
                        <TextBlock Text="Итого"
                                   FontSize="12"
                                   Foreground="#2E7D32"
                                   FontWeight="Medium"/>
                    </Border>
                    
                    <Border x:Name="TotalBadge"
                            CornerRadius="4"
                            Padding="6,2"
                            DockPanel.Dock="Right"
                            Margin="10,0,0,0"
                            Background="#2196F3">
                        <TextBlock Text="ОБЩИЙ ИТОГ"
                                   FontSize="12"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </Border>
                </DockPanel>
                
                <!-- Детали для обычных записей -->
                <StackPanel x:Name="DetailsPanel">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Операция -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Операция:" 
                                       FontSize="12" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="OperationText"
                                       Text="Сварка"
                                       FontSize="14" 
                                       FontWeight="Medium"/>
                        </StackPanel>
                        
                        <!-- Дата -->
                        <StackPanel Grid.Column="1" Margin="0,0,20,0">
                            <TextBlock Text="Дата:" 
                                       FontSize="12" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="DateText"
                                       Text="01.03.2024"
                                       FontSize="14"/>
                        </StackPanel>
                        
                        <!-- Количество -->
                        <StackPanel Grid.Column="2" Margin="0,0,20,0">
                            <TextBlock Text="Кол-во:" 
                                       FontSize="12" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="QuantityText"
                                       Text="10"
                                       FontSize="14"/>
                        </StackPanel>
                        
                        <!-- Тоннаж -->
                        <StackPanel Grid.Column="3" 
                                    x:Name="TonnagePanel">
                            <TextBlock Text="Тоннаж:" 
                                       FontSize="12" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="TonnageText"
                                       Text="1.500 т"
                                       FontSize="14"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Формула расчета -->
                    <Border Background="#F5F5F5"
                            CornerRadius="4"
                            Padding="10"
                            Margin="0,10,0,0">
                        <TextBlock x:Name="FormulaText"
                                   Text="Тариф: 4500 × Тоннаж: 1.5 / 1000 × Кол-во: 10 × Коэф: 1.5 = 101250"
                                   FontSize="12"
                                   Foreground="#424242"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
                
                <!-- Сумма -->
                <DockPanel Margin="0,15,0,0">
                    <TextBlock Text="Сумма:" 
                               FontSize="14" 
                               Foreground="#666666"
                               DockPanel.Dock="Left"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock x:Name="AmountText"
                               Text="101,250.00 ₽" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#1976D2"
                               DockPanel.Dock="Right"
                               HorizontalAlignment="Right"/>
                </DockPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
