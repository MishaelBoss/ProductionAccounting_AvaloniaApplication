<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Pages"
             x:DataType="vm:TimesheetUserControlPageViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="850"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Pages.TimesheetUserControlPageView">

    <Grid Margin="15" 
          RowDefinitions="Auto, Auto, *">

        <Grid Grid.Row="2" 
              ColumnDefinitions="*, *" 
              ColumnSpacing="20">
            
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10" 
                    Opacity="0.5"/>

            <Border Grid.Column="0"
                    Padding="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="ДОБАВИТЬ ОДНУ ЗАПИСЬ"
                               FontSize="16"
                               FontWeight="Bold" 
                               Foreground="#2c3e50"/>
                    
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Сотрудник *"
                                       FontWeight="SemiBold" 
                                       Foreground="#555" 
                                       Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding ComboBoxUsers}" 
                                      SelectedItem="{Binding SelectedSingleUser}"
                                      DisplayMemberBinding="{Binding FullName}"
                                      PlaceholderText="Выберите сотрудника"
                                      FontSize="14" 
                                      Height="40"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" 
                                    Spacing="15">
                            <StackPanel Orientation="Vertical" 
                                        Width="180">
                                <TextBlock Text="Дата *" 
                                           FontWeight="SemiBold" 
                                           Foreground="#555" 
                                           Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="{Binding SelectedDate}" 
                                            FontSize="14" 
                                            Height="40"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Vertical" 
                                        Width="150">
                                <TextBlock Text="Статус *" 
                                           FontWeight="SemiBold" 
                                           Foreground="#555" 
                                           Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Statuses}" 
                                          SelectedItem="{Binding SelectedSingleStatus}"
                                          FontSize="14" Height="40"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Orientation="Vertical" 
                                    IsVisible="{Binding SelectedSingleStatus.Code}">
                            <TextBlock Text="Отработано часов" 
                                       FontWeight="SemiBold" 
                                       Foreground="#555" 
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding SingleHours}" 
                                     Watermark="8.0"
                                     FontSize="14" Height="40"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Примечание" 
                                       FontWeight="SemiBold" 
                                       Foreground="#555" 
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding SingleNotes}" 
                                     Watermark="Дополнительная информация..."
                                     AcceptsReturn="True"
                                     Height="60" FontSize="14"/>
                        </StackPanel>
                        
                        <Button Content="СОХРАНИТЬ ЗАПИСЬ" 
                                Command="{Binding SaveSingleRecordCommand}"
                                Foreground="Black"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                FontSize="14" 
                                FontWeight="Bold"
                                Height="45" 
                                CornerRadius="8"
                                BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Opacity="0.5"/>

            <Border Grid.Column="1"
                    Padding="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="МАССОВОЕ ДОБАВЛЕНИЕ"
                               FontSize="16"
                               FontWeight="Bold" 
                               Foreground="#2c3e50"/>
                    
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" 
                                    Spacing="15">
                            <StackPanel Orientation="Vertical"
                                        Width="180">
                                <TextBlock Text="Начальная дата *"
                                           FontWeight="SemiBold" 
                                           Foreground="#555"
                                           Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="{Binding MassEditStartDate}" 
                                             FontSize="14"
                                             Height="40"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Vertical"
                                        Width="180">
                                <TextBlock Text="Конечная дата *" 
                                           FontWeight="SemiBold"
                                           Foreground="#555" 
                                           Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="{Binding MassEditEndDate}" 
                                            FontSize="14"
                                            Height="40"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Статус для всех дней *" 
                                       FontWeight="SemiBold" 
                                       Foreground="#555" 
                                       Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Statuses}" 
                                      SelectedItem="{Binding SelectedMassStatus}"
                                      FontSize="14" Height="40"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Vertical" 
                                    IsVisible="{Binding SelectedMassStatus.Code}">
                            <TextBlock Text="Часов в день" 
                                       FontWeight="SemiBold" 
                                       Foreground="#555" 
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding MassEditHours}" 
                                     Watermark="8.0"
                                     FontSize="14" Height="40"/>
                        </StackPanel>
                        
                        <CheckBox Content="Исключить выходные дни (суббота, воскресенье)" 
                                  IsChecked="{Binding ExcludeWeekends}"
                                  FontWeight="SemiBold"
                                  Margin="0,10,0,0"
                                  Foreground="Black"/>
                        
                        <Button Content="ПРИМЕНИТЬ МАССОВОЕ ДОБАВЛЕНИЕ" 
                                Command="{Binding ApplyMassEditCommand}"
                                Foreground="Black"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                FontSize="14" FontWeight="Bold"
                                Height="45" CornerRadius="8"
                                BorderThickness="0"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>

</UserControl>
