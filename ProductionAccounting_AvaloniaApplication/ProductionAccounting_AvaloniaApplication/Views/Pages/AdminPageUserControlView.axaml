<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:controls="using:ProductionAccounting_AvaloniaApplication.Views.Control"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		     xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Pages"
             x:DataType="vm:AdminPageUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Pages.AdminPageUserControlView">

    <Grid>
		<Grid	Margin="10" 
				RowDefinitions="Auto, Auto, *" 
				ZIndex="2">

			<Grid	Grid.Row="0" 
					HorizontalAlignment="Right" 
					VerticalAlignment="Top" 
					ColumnDefinitions="Auto, Auto">
				<StackPanel		Grid.Column="1"
		  						Orientation="Horizontal"
		  						HorizontalAlignment="Center"
		  						Margin="10,0,0,0">

		  			<Button HorizontalAlignment="Right"
		  					VerticalAlignment="Top"
		  					Width="32"
		  					Height="32"
		  					ToolTip.Tip="Adds">
		  				<Image Source="/Assets/add-64.png"/>
		  				<Button.Flyout>
		  					<Flyout Placement="Bottom">
		  						<ListBox>
		  							<Button Command="{Binding OpenAddUsers}"
		  									VerticalAlignment="Stretch"
		  									HorizontalAlignment="Stretch"
		  									Content="Add user"/>

									<Button Command="{Binding AddOrderCommand}"
		  									VerticalAlignment="Stretch"
		  									HorizontalAlignment="Stretch"
		  									Content="Add a order"/>

									<Button Command="{Binding AddWorkTypeCommand}"
		  									VerticalAlignment="Stretch"
		  									HorizontalAlignment="Stretch"
		  									Content="Add a work type"/>
		  						</ListBox>
		  					</Flyout>
		  				</Button.Flyout>
		  			</Button>
		  		</StackPanel>
			</Grid>
		</Grid>

        <TabControl Margin="5">
			<TabItem Header="Users">
				<controls:TabUsersListUserControl />
			</TabItem>
			<TabItem Header="Product">
				<controls:TabOrderUserControl />
			</TabItem>
			<TabItem Header="Wort type">
				<controls:TabWorkTypeUserControl />
			</TabItem>
        </TabControl>
        
    </Grid>

</UserControl>
