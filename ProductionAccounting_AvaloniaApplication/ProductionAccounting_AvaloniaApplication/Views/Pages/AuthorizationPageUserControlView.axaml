<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Pages"
             x:DataType="vm:AuthorizationPageUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="00" d:DesignHeight="550"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Pages.AuthorizationPageUserControlView">

    <UserControl.Styles>
        <StyleInclude Source="/Styles/Resources/AuthorizationStyles.axaml"/>
    </UserControl.Styles>

    <Grid>
        <Border Width="420"
                Height="450"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#FFFFFFE6"
                CornerRadius="20"
                BoxShadow="0 10 40 0 #40000000"
                Padding="40">
            <StackPanel Spacing="25" VerticalAlignment="Center">
            
                <StackPanel Spacing="10" HorizontalAlignment="Center">
                    <TextBlock Text="Production Accounting"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding LoginText}"
                               FontSize="16"
                               Foreground="#64748B"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="{Binding Messageerror}"
                           Foreground="#DC2626"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>

                <StackPanel Spacing="6">
                    <TextBlock Text="{Binding NameText}" 
                               Foreground="#374151" 
                               FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Login}"
                             Watermark="{Binding EnterYourNameText}"
                             Foreground="Black"
                             HorizontalContentAlignment="Left"
                             VerticalContentAlignment="Center"
                             FontSize="14"
                             Height="48"
                             Padding="15,0"
                             CornerRadius="12"
                             Background="#F8FAFC"
                             BorderBrush="#CBD5E1"
                             BorderThickness="1"/>
                </StackPanel>

                <StackPanel Spacing="6">
                    <TextBlock Text="{Binding PasswordText}"
                               Foreground="#374151"
                               FontWeight="SemiBold"/>

                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox x:Name="txtPassword"
                                 Text="{Binding Password, Mode=TwoWay}"
                                 Watermark="{Binding EnterYourPasswordText}"
                                 Foreground="Black"
                                 HorizontalContentAlignment="Left"
                                 VerticalContentAlignment="Center"
                                 FontSize="14"
                                 Height="48"
                                 Padding="15,0"
                                 CornerRadius="12"
                                 Background="#F8FAFC"
                                 BorderBrush="#CBD5E1"
                                 BorderThickness="1"
                                 IsVisible="{Binding !IsPasswordVisible}"/>

                        <TextBox x:Name="pwdPassword"
                                 Text="{Binding Password, Mode=TwoWay}"
                                 PasswordChar="*"
                                 Watermark="{Binding EnterYourPasswordText}"
                                 Foreground="Black"
                                 HorizontalContentAlignment="Left"
                                 VerticalContentAlignment="Center"
                                 FontSize="14"
                                 Height="48"
                                 Padding="15,0"
                                 CornerRadius="12"
                                 Background="#F8FAFC"
                                 BorderBrush="#CBD5E1"
                                 BorderThickness="1"
                                 IsVisible="{Binding IsPasswordVisible}"/>

                        <Button Grid.Column="1"
                                Margin="8,0,0,0"
                                Classes="Eye"
                                Command="{Binding TogglePasswordVisibilityCommand}">
                            <Image Source="{Binding EyeIcon}" 
                                   Width="24" 
                                   Height="24"/>
                        </Button>
                    </Grid>
                </StackPanel>

                <Button Content="{Binding LoginText}"
                        Command="{Binding ConfirmCommand}"
                        IsEnabled="{Binding IsActiveConfirmButton}"
                        HorizontalAlignment="Stretch"
                        Height="52"
                        FontSize="16"
                        FontWeight="Bold"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Classes="ButtonLogin"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
