<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Pages"
			 x:DataType="vm:WorkUserPageUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="750"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Pages.WorkUserPageUserControlView">

        <ScrollViewer>
            <Grid Margin="20" 
                  Name="ContentCenter" 
                  RowDefinitions="Auto,0,Auto,Auto,*">
            
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Opacity="0.5"/>

            <Border Grid.Row="0" 
                    Padding="20" 
                    Margin="0,0,0,20">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Greeting}" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"/>
                        <TextBlock Text="{Binding CurrentDate, StringFormat='{}Сегодня: {0:dddd, dd MMMM yyyy}'}" 
                                   Foreground="#7F8C8D" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ItemsControl Grid.Row="1" 
                          ItemsSource="{Binding StatCards}" 
                          Margin="0,0,0,20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="200" 
                                Height="120"
                                Background="{Binding Background}" 
                                BorderBrush="{Binding BorderColor}"
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="{Binding Icon}" 
                                           FontSize="20" 
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Value}" 
                                           FontSize="24" 
                                           FontWeight="Bold"
                                           Foreground="{Binding TextColor}"/>
                                <TextBlock Text="{Binding Title}" 
                                           FontSize="12" 
                                           Foreground="#7F8C8D" 
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Subtitle}" 
                                           FontSize="10" 
                                           Foreground="{Binding TextColor}" 
                                           Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid Grid.Row="3" 
                  ColumnDefinitions="*,*" 
                  RowDefinitions="*" 
                  Margin="0,0,0,20">

                <Border Grid.Row="0" 
                        Grid.Column="0" 
                        Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Opacity="0.5"
                        Padding="20" 
                        Margin="0,0,10,0"/>
                
                <Border Grid.Row="0" 
                        Grid.Column="0" 
                        Padding="20" 
                        Margin="0,0,10,0">
                    <StackPanel Spacing="15">
                        <StackPanel Orientation="Horizontal" 
                                    Spacing="10">
                            <Border Background="#E8F5E8" 
                                    Width="40" 
                                    Height="40" 
                                    CornerRadius="20" 
                                    HorizontalAlignment="Center">
                                <TextBlock Text="➕"
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Внести работу" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       VerticalAlignment="Center"
                                       Foreground="Black"/>
                        </StackPanel>
                        <TextBlock Text="Добавить информацию о выполненной работе за сегодня" 
                                   FontSize="12" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"/>
                        <Button Content="Перейти к вводу" 
                                Command="{Binding AddWorkCommand}"
                                Background="#27AE60" 
                                Foreground="White" 
                                Height="40"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" 
                        Grid.Column="1" 
                        Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Opacity="0.5"
                        Padding="20" 
                        Margin="0,0,10,0"/>

                <Border Grid.Row="0" 
                        Grid.Column="1" 
                        Padding="20" 
                        Margin="10,0,0,0">
                    <StackPanel Spacing="15">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                            <Border Background="#EBF5FB" 
                                    Width="40" 
                                    Height="40" 
                                    CornerRadius="20"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="📋" FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Мои работы"
                                       FontSize="16"
                                       FontWeight="SemiBold" 
                                       VerticalAlignment="Center"
                                       Foreground="Black"/>
                        </StackPanel>
                        <TextBlock Text="Просмотр и редактирование внесенных работ за разные периоды" 
                                   FontSize="12" 
                                   Foreground="#7F8C8D"
                                   TextWrapping="Wrap"/>
                        <Button Content="История работ"
                                Command="{Binding ViewWorkHistoryCommand}"
                                Background="#2980B9" 
                                Foreground="White" 
                                Height="40"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="4" 
                    Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Opacity="0.5"/>

            <Border Grid.Row="4" 
                    Padding="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="Сегодняшние работы" 
                               FontSize="16"
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"/>
                    
                    <ItemsControl ItemsSource="{Binding TodaysWork}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA"
                                        CornerRadius="6"
                                        Padding="10" 
                                        Margin="0,0,0,5">
                                    <Grid ColumnDefinitions="*,100,80">
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding ProductName}" 
                                                   FontSize="12" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Quantity, StringFormat='{}Кол-во: {0}'}" 
                                                   FontSize="11" 
                                                   Foreground="#7F8C8D" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Amount, StringFormat='{}{0} ₽'}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#27AE60" 
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <TextBlock Text="Сегодня еще не внесено работ" 
                               FontSize="12" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,0"
                               IsVisible="{Binding HasNoTodaysWork}"/>
                               
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10" 
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <TextBlock Text="{Binding TodaysTotal, StringFormat='{}Итого за сегодня: {0} ₽'}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2C3E50"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>

</UserControl>
