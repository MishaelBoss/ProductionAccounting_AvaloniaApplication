<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Pages"
			 x:DataType="vm:WorkPageUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="750"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Pages.WorkPageUserControlView">

        <ScrollViewer>

            <Grid Margin="20" 
                  RowDefinitions="Auto,20,Auto,*">
            
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Opacity="0.5"/>

            <Border Grid.Row="0" 
                    Padding="20" 
                    Margin="0,0,0,20">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Greeting}" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"/>
                        <TextBlock Text="{Binding CurrentDate, StringFormat='{}Сегодня: {0:dddd, dd MMMM yyyy}'}" 
                                   Foreground="#7F8C8D" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>

</UserControl>
