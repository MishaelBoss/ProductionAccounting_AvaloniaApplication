<UserControl xmlns="https://github.com/avaloniaui"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Pages"
          x:DataType="vm:ProfilePageUserControlViewModel"
          mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
          x:Class="ProductionAccounting_AvaloniaApplication.Views.Pages.ProfilePageUserControlView">

    <UserControl.Styles>
        <StyleInclude Source="/Styles/Controls/ProfilePageStyles.axaml"/>
    </UserControl.Styles>

    <ScrollViewer  Padding="0,20,0,0">
        <StackPanel Spacing="20"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top">
            <Border Background="#1E1E1E"
                    CornerRadius="20"
                    BoxShadow="0 10 30 0 #80000000"
                    Width="420"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Padding="30">

                <Grid RowDefinitions="Auto, Auto, *">

                    <StackPanel Grid.Row="0"
                                HorizontalAlignment="Center"
                                Spacing="12">
                        <Border Width="100" Height="100"
                                CornerRadius="50"
                                Background="#3A3A3D"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <TextBlock  Text="{Binding Login}"
                                        FontSize="32"
                                        FontWeight="SemiBold"
                                        Foreground="#FFFFFF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock  Text="{Binding EmployeeName}"
                                    FontSize="24"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    HorizontalAlignment="Center"/>
                        <TextBlock  Text="{Binding Position}"
                                    FontSize="14"
                                    Foreground="#BBBBBB"
                                    HorizontalAlignment="Center"/>
                    </StackPanel>

                    <ItemsControl   Grid.Row="1" 
                                    Margin="0,30,0,20">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="14"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <Border Background="#2D2D30"
                                CornerRadius="10"
                                Padding="14">
                            <Grid ColumnDefinitions="Auto,*">
                                <PathIcon   Data="{StaticResource PersonRegular}"
                                            Foreground="#AAAAAA"
                                            Width="20"/>
                                <TextBlock  Grid.Column="1" 
                                            Margin="12,0,0,0" 
                                            Text="{Binding Employee}" 
                                            Foreground="White"/>
                            </Grid>
                        </Border>

                        <Border Background="#2D2D30" 
                                CornerRadius="10" 
                                Padding="14">
                            <Grid ColumnDefinitions="Auto,*">
                                <PathIcon   Data="{StaticResource MailRegular}"
                                            Foreground="#AAAAAA"
                                            Width="20"/>
                                <TextBlock  Grid.Column="1"
                                            Margin="12,0,0,0" 
                                            Text="{Binding Email}"
                                            Foreground="White"/>
                            </Grid>
                        </Border>

                        <Border Background="#2D2D30"
                                CornerRadius="10" 
                                Padding="14">
                            <Grid ColumnDefinitions="Auto,*">
                                <PathIcon   Data="{StaticResource PhoneRegular}"
                                            Foreground="#AAAAAA" 
                                            Width="20"/>
                                <TextBlock  Grid.Column="1" 
                                            Margin="12,0,0,0" 
                                            Text="{Binding Phone}"
                                            Foreground="White"/>
                            </Grid>
                        </Border>
                    </ItemsControl>


                    <StackPanel Grid.Row="2" 
                                Spacing="12" 
                                Margin="0,10,0,0">

                        <Button Content="{Binding ProfilePageLogoutText}"
                                Command="{Binding LogoutCommand}"
                                IsVisible="{Binding IsOwnProfile}"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Height="44"
                                Background="Transparent"
                                BorderBrush="#555555"
                                Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="#1E1E1E"
                    CornerRadius="20"
                    BoxShadow="0 10 30 0 #80000000"
                    Width="420"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Padding="30"
                    MaxHeight="500">
                <ScrollViewer Margin="10">
                    <TabControl Margin="5">
                        <TabItem    Header="{Binding ProfilePageTablesText}"
                                    Classes="TabItem">
                            <ItemsControl ItemsSource="{Binding Tables}">
								<ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12"
                                                Background="LightGray"
                                                BorderBrush="#E1E5E9"
                                                BorderThickness="1"
                                                Margin="5">

		                                    <Grid   Margin="15"
                                                    ColumnDefinitions="Auto, *">

			                                    <Border Grid.Column="0"
					                                    Width="44"
					                                    Height="44"
					                                    CornerRadius="10"
					                                    Background="Gray"
					                                    Margin="0,0,16,0">
				                                    <Image  Source="/Assets/message-64.png"
					                                        Width="22"
					                                        Height="22"/>
			                                    </Border>

			                                    <StackPanel Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,15,0">

				                                    <TextBlock	Text="{Binding Login}"
							                                    Foreground="#1A1D21"
							                                    FontSize="16"
							                                    FontWeight="SemiBold"
							                                    Margin="0,0,0,4"/>

				                                    <TextBlock	Text="{Binding Status}"
							                                    Foreground="#1A1D21"
							                                    FontSize="16"
							                                    FontWeight="SemiBold"
							                                    Margin="0,0,0,4"/>

				                                    <TextBlock	Text="{Binding Notes}"
							                                    Foreground="#6B7280"
							                                    FontSize="13"
							                                    FontWeight="Medium"
							                                    Margin="0,0,0,8"/>
				
				                                    <TextBlock	Text="{Binding HoursWorked}"
							                                    Foreground="#6B7280"
							                                    FontSize="13"
							                                    FontWeight="Medium"
							                                    Margin="0,0,0,8"/>

				                                    <TextBlock	Text="{Binding WorkDate, StringFormat='{}{0:dddd, dd MMMM yyyy}'}"
							                                    IsVisible="{Binding IsVisibleWorkDate}"
							                                    Foreground="#6B7280"
							                                    FontSize="10"
							                                    FontWeight="Medium"
							                                    Margin="0,0,0,8"/>
				
			                                    </StackPanel>
		                                    </Grid>
	                                    </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </TabItem>
                        <TabItem    Header="{Binding ProfilePageProductionHistoryText}"
                                    Foreground="#ebe9e9ff">
                            <ItemsControl ItemsSource="{Binding ProductionHistory}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12"
                                                Background="LightGray"
                                                BorderBrush="#E1E5E9"
                                                BorderThickness="1"
                                                Margin="5">

                                            <Grid Margin="15"
                                                 ColumnDefinitions="Auto, *">

                                                <Border Grid.Column="0"
					                                    Width="44"
					                                    Height="44"
					                                    CornerRadius="10"
					                                    Background="Gray"
					                                    Margin="0,0,16,0">
				                                    <Image  Source="/Assets/product-64.png"
					                                        Width="22"
					                                        Height="22"/>
			                                    </Border>

                                                <StackPanel  Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,15,0">

                                                    <Grid ColumnDefinitions="*, Auto">
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="{Binding ProductName}"
                                                                        Foreground="#1A1D21"
                                                                        FontSize="16"
                                                                        FontWeight="SemiBold"
                                                                        Margin="0,0,0,2"/>
                                                            <TextBlock Text="{Binding OperationName}"
                                                                        Foreground="#6B7280"
                                                                        FontSize="13"
                                                                        FontWeight="Medium"
                                                                        Margin="0,0,0,4"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="1"
                                                                    HorizontalAlignment="Right">
                                                            <TextBlock  Text="{Binding Quantity, StringFormat='{}{0} шт'}"
                                                                        Foreground="#1A1D21"
                                                                        FontSize="14"
                                                                        FontWeight="SemiBold"/>
                                                        </StackPanel>
                                                    </Grid>

                                                    <StackPanel Orientation="Horizontal"
                                                                Spacing="10"
                                                                Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding ProductionDate, StringFormat='{} {0:dd.MM.yy}'}"
                                                                    Foreground="#6B7280"
                                                                    FontSize="10"/>
                                                        <TextBlock Text="{Binding ShiftDisplay}"
                                                                    Foreground="#6B7280"
                                                                    FontSize="10"/>
                                                        <Border CornerRadius="4"
                                                                Padding="4,2"
                                                                Background="{Binding StatusColor}">
                                                            <TextBlock Text="{Binding Status}"
                                                                        Foreground="White"
                                                                        FontSize="10"
                                                                        FontWeight="Medium"/>
                                                        </Border>
                                                    </StackPanel>

                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </TabItem>
                    </TabControl>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>