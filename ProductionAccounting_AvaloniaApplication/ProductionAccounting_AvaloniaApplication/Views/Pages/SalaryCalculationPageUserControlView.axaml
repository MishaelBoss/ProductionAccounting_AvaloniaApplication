<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels.Pages"
             x:DataType="vm:SalaryCalculationPageUserControlViewModel"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="ProductionAccounting_AvaloniaApplication.Views.Pages.SalaryCalculationPageUserControlView">

    <Grid Margin="20" RowDefinitions="Auto,*">

        <Border Grid.Row="0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">

            <StackPanel Spacing="20">

                <StackPanel>
                    <TextBlock Text="Расчет заработной платы"
                               FontSize="24"
                               FontWeight="Bold"/>
                </StackPanel>

                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="20">

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Период расчета:"
                                   FontSize="12"
                                   Foreground="#FFFFFF"
                                   Margin="0,0,0,5"/>
                        <Grid ColumnDefinitions="*,Auto,*" 
                              ColumnSpacing="8">
                            <DatePicker SelectedDate="{Binding PeriodStart}"
                                        HorizontalAlignment="Stretch"/>
                            <TextBlock Grid.Column="1"
                                       Text="—"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                            <DatePicker Grid.Column="2"
                                        SelectedDate="{Binding PeriodEnd}"
                                        HorizontalAlignment="Stretch"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Сотрудник:"
                                   FontSize="12"
                                   Foreground="#FFFFFF"
                                   Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Users}"
                                  SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                VerticalAlignment="Bottom"
                                Spacing="10">
                        <Button Content="Рассчитать"
                                Command="{Binding CalculateSalaryCommand}"
                                Background="#2196F3"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="24,12"
                                MinWidth="140"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"/>
                        <Button Content="Экспорт в PDF"
                                Command="{Binding ExportToPdfCommand}"
                                Background="#FF9800"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="24,12"
                                MinWidth="140"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">

            <Grid RowDefinitions="Auto,*">
                <DockPanel Margin="0,0,0,15">
                    <TextBlock Text="Результаты расчета"
                               FontSize="18"
                               FontWeight="SemiBold"
                               DockPanel.Dock="Left"/>
                </DockPanel>

                <ScrollViewer Grid.Row="1">
                    <StackPanel>
                        <StackPanel x:Name="SalaryContent"/>

                        <Border IsVisible="{Binding ElementName=SalaryContent}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="40">
                            <StackPanel HorizontalAlignment="Center" Spacing="12">
                                <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                          Width="64" Height="64" Foreground="#999999"/>
                                <TextBlock Text="Нет данных для отображения"
                                           FontSize="16"
                                           Foreground="#999999"/>
                                <TextBlock Text="Выберите период и нажмите 'Рассчитать'"
                                           FontSize="14"
                                           Foreground="#999999"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>