<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:ProductionAccounting_AvaloniaApplication.ViewModels"
        x:DataType="vm:ConfirmDeleteWindowViewModel"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        MaxWidth="400" MaxHeight="200"
        x:Class="ProductionAccounting_AvaloniaApplication.ConfirmDeleteWindow"
		ExtendClientAreaToDecorationsHint="True"
		WindowStartupLocation="CenterScreen"
        Title="ConfirmDeleteWindow">

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
        
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#E1E5E9"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#D4D7DA"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
    </Window.Styles>

    <Border CornerRadius="12"
            Background="LightGray"
            BorderBrush="#E1E5E9"
            BorderThickness="1"
            Margin="0,0,0,0"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
        
        <Grid Margin="0"
              ColumnDefinitions="Auto, *, Auto"
              RowDefinitions="Auto, Auto, Auto">

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="0,0,15,0"
                        Width="200">

                <TextBlock Text="{Binding Title}"
                           Foreground="#2C3E50"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"
                           TextAlignment="Center"
                           MaxWidth="200"/>

                <TextBlock Text="{Binding Id}"
                           Foreground="#7F8C8D"
                           FontSize="12"
                           Margin="0,0,0,1"
                           TextAlignment="Center"
                           MaxWidth="200"
                           TextTrimming="CharacterEllipsis"/>

            </StackPanel>

            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="12"
                        VerticalAlignment="Center"
                        Margin="0,0,0,0">

                <Button Command="{Binding CancelCommand}"
                        Width="100"
                        Height="36"
                        CornerRadius="8"
                        Background="#E1E5E9"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,6,0">

                    <Label HorizontalAlignment="Center"
                           Content="Cancel"
                           Foreground="#2C3E50"
                           FontSize="14"
                           FontWeight="Medium"/>

                </Button>

                <Button Command="{Binding DeleteCommand}"
                        Width="100"
                        Height="36"
                        CornerRadius="8"
                        Background="#FF3B30"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,0,0">

                    <Label HorizontalAlignment="Center"
                           Content="Confirm"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Medium"/>

                </Button>

            </StackPanel>

        </Grid>

    </Border>
</Window>
