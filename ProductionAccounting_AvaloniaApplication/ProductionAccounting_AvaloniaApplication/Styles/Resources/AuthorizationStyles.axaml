<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="TextBox">
        <Setter Property="Background" Value="#334155"/>
        <Setter Property="BorderBrush" Value="#475569"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="#334155"/>
        <Setter Property="BorderBrush" Value="#6366F1"/>
    </Style>

    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="#334155"/>
        <Setter Property="BorderBrush" Value="#818CF8"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style Selector="Button.Eye">
		<Setter Property="Width" Value="40"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="Background" Value="Gray"/>
		<Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style Selector="Button.Eye:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="Gray"/>
		<Setter Property="Opacity" Value="0.9"/>
    </Style>

    <Style Selector="Button.Eye:pressed /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="Gray"/>
		<Setter Property="Opacity" Value="0.7"/>
    </Style>

    <Style Selector="Button.ButtonLogin">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Color="#6366F1" Offset="0"/>
                <GradientStop Color="#8B5CF6" Offset="1"/>
            </LinearGradientBrush>
        </Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.ButtonLogin:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Color="#4F46E5" Offset="0"/>
                <GradientStop Color="#7C3AED" Offset="1"/>
            </LinearGradientBrush>
        </Setter>
        <Setter Property="Opacity" Value="0.9"/>
    </Style>

    <Style Selector="Button.ButtonLogin:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Color="#4338CA" Offset="0"/>
                <GradientStop Color="#6D28D9" Offset="1"/>
            </LinearGradientBrush>
        </Setter>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <Style Selector="Button.ButtonLogin:disabled /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Opacity" Value="0.6"/>
    </Style>
</Styles>
